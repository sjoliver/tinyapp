<header>
  <nav class="navbar navbar-expand-md navbar-dark" style="background-color:#3b52d7 ;">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <% if (user) { %>
          <a class="nav-item nav-link" href="/urls">My URLs</a>
          <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <% } %>
      </div>
    </div>
    
    <div>
      <% if (!user) { %>
          <button type="submit"; class="btn btn-primary btn-sm"><a href="/login" style="color: white;">Login</a></button>
          <button type="submit"; class="btn btn-primary btn-sm"><a href="/register" style="color: white;">Register</a></button>
      <% } else { %>
        <h6>Logged in as: <%= user.email %></h6>
        <form method="POST" action="/logout">
          <button type="submit"class="btn btn-primary btn-sm">Logout</button>
        </form>
      <% } %>
    </div>
  </nav>
</header>